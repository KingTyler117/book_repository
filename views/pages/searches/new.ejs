<html lang="en">

<head>
  <title>Book Request Form</title>
</head>

<body>

  <form method="post" action="/searches">
    <div>
      <input name="search_entry" placeholder="Enter a title or author"/>
    </div>
    <div>
        <label for = "title">Title</label>
        <input type = "radio" id ="title"><br>
        <label for = "author">Author</label>
